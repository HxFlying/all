/* pages/profile/profile.wxss */
.profile{
  position: relative;
  background-color:lightgreen;
  
  height: 400rpx;
  width:100%;  
  
    
}
/* 图像样式 */
.profile-img{
  position: absolute;
  display: block;
  border-radius:50%;
  overflow: hidden;
  top:50%;
  left:50%;
  margin-left: -100rpx;
  margin-top: -100rpx;
   width:200rpx;
  height: 200rpx;
 
  }
  /* 昵称 */
  .profile-name{
  position: absolute;
  bottom:10rpx;
  left: 50%;
  margin-left:-16rpx; 
  color: white;
  }
  /* 按钮 */
  .btn{
    margin-top: 25px;
    background-color: lightgreen;
    color: white;
  }
